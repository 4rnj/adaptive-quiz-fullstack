{
  "name": "adaptive-quiz-backend",
  "version": "1.0.0",
  "description": "Backend services for adaptive quiz application with AWS serverless architecture",
  "main": "app.py",
  "scripts": {
    "start": "python app.py",
    "test": "pytest",
    "lint": "pylint src/",
    "format": "black src/",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:staging": "serverless remove --stage staging",
    "logs": "serverless logs -f",
    "invoke": "serverless invoke -f",
    "offline": "serverless offline start",
    "package": "serverless package",
    "info": "serverless info",
    "config:credentials": "serverless config credentials --provider aws"
  },
  "keywords": ["quiz", "adaptive-learning", "aws", "serverless", "dynamodb", "lambda"],
  "author": "Adaptive Quiz Team",
  "license": "MIT",
  "devDependencies": {
    "serverless": "^4.0.0",
    "serverless-python-requirements": "^6.1.0",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-aws-alerts": "^1.8.0",
    "serverless-domain-manager": "^7.3.0",
    "serverless-prune-plugin": "^2.0.0",
    "serverless-plugin-warmup": "^8.2.0",
    "serverless-offline": "^13.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-wsgi": "^3.0.4"
  },
  "dependencies": {
    "aws-sdk": "^2.1456.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}